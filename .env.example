# Example .env for Jarvis Node secret storage

# Path to the config JSON file
CONFIG_PATH=config.json

# Directory where secrets and keys are stored (default: ~/.jarvis)
JARVIS_SECRET_DIRECTORY=~/.jarvis

# Path to the Fernet encryption key file (default: ~/.jarvis/secrets.key)
JARVIS_KEY_FILE=~/.jarvis/secrets.key

# Path to the encrypted secrets JSON file (default: ~/.jarvis/secrets.json.enc)
JARVIS_SECRET_FILE=~/.jarvis/secrets.json.enc

# Provisioning settings
# Set to true to use simulated WiFi manager (for development/testing)
JARVIS_SIMULATE_PROVISIONING=false
# Port for provisioning API server
JARVIS_PROVISIONING_PORT=8080
# Set to true to skip provisioning check on main.py startup
JARVIS_SKIP_PROVISIONING_CHECK=false